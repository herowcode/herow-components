{
  "name"           : "@herowcode/herow-components",
  "version"        : "0.1.0",
  "private"        : true,
  "description"    : "Custom Component CLI - Instale componentes React diretamente do GitHub",
  "workspaces"     : ["packages/*"],
  "scripts"        : {
    "dev"          : "pnpm --filter @herowcode/cli dev",
    "build"        : "pnpm --filter @herowcode/cli build",
    "cli"          : "pnpm --filter @herowcode/cli start",
    "test"         : "vitest",
    "test:run"     : "vitest run",
    "typecheck"    : "pnpm --filter @herowcode/cli typecheck",
    "clean"        : "rm -rf packages/cli/dist",
    "release:patch": "node scripts/release.mjs patch",
    "release:minor": "node scripts/release.mjs minor",
    "release:major": "node scripts/release.mjs major"
  },
  "devDependencies": {"@types/node": "^20.10.0", "typescript": "^5.3.0", "vitest": "^1.0.0"},
  "packageManager" : "pnpm@8.10.0",
  "engines"        : {"node": ">=22.0.0"},
  "author"         : {"name": "Judson Junior", "email": "judson.junior@herowcode.com"},
  "license"        : "MIT",
  "repository"     : {"type": "git", "url": "git+https://github.com/herowcode/herow-components.git"},
  "bugs"           : {"url": "https://github.com/herowcode/herow-components/issues"},
  "homepage"       : "https://github.com/herowcode/herow-components#readme"
}
